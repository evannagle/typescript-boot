{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ES2020",
    "target": "ESNext",
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "docs/**/*"]
}
